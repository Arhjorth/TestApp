<UserControl x:Class="TestApp.View.LineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <Line Stroke="Red" X1="{Binding FromBox.CanvasCenterX}" Y1="{Binding FromBox.CanvasCenterY}" X2="{Binding ToBox.CanvasCenterX}" Y2="{Binding ToBox.CanvasCenterY}" StrokeThickness="10"/>
</UserControl>
