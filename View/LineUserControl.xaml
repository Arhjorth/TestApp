<UserControl x:Class="TestApp.View.LineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    
    <Line Stroke="Black" X1="{Binding FromBox.X}" Y1="{Binding FromBox.Y}" X2="{Binding ToBox.X}" Y2="{Binding ToBox.Y}" StrokeThickness="2"/>
</UserControl>
